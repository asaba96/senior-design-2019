<launch>
    <arg name="platform" default="m1" doc="string representing the platform" />
    <arg name="world_name" default="basic"/>

    <group if="$(eval str(arg('platform')) == 'rams_indoor')" >
        <include file="$(find mbz2020_common)/launch/localization.launch" >
            <arg name="platform" value="$(arg platform)"/>
        </include>
        
        <include file="$(find mbz2020_common)/launch/base_hardware.launch" >
            <arg name="platform" value="$(arg platform)"/>
        </include>

        <include file="$(find mbz2020_perception)/launch/perception.launch" > 
            <arg name="platform" value="$(arg platform)"/>
        </include>
    </group>

    <group if="$(eval str(arg('platform')) == 'm1')" >
        <include file="$(find mbz2020_common)/launch/base_hardware.launch" >
            <arg name="platform" value="$(arg platform)"/>
        </include>
   </group>

    <!-- if running in simulation -->
    <group if="$(eval str(arg('platform')) == 'sim')" >
        <include file="$(find mbz2020_common)/launch/sim.launch">
            <arg name="world_name" value="$(arg world_name)"/>
        </include>
    </group>

</launch>
